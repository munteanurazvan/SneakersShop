{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
    <div class="container">
            {{ form_start(productForm) }}
                <div class="row">
                    <div class="col-4">
                        {{ form_row(productForm.name) }}
                    </div>
                    <div class="col-2">
                        {{ form_row(productForm.price) }}
                    </div>
                    <div class="col-2">
                        {{ form_row(productForm.category) }}
                    </div>
                    <div class="col-2">
                        {{ form_row(productForm.images) }}
                    </div>
                    <div class="col-2">
                        {{ form_end(productForm) }}
                    </div>
                </div>
    </div>
{% endblock %}
