{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Images</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>
                    {% for image in product.productImages %}
                        <div>
                            <img height="50" width="50" src="{{ asset('images/'~image.image) }}"/>
                                <br/>
                                    <a href="{{ url('app_crud_remove_image',{'id':image.id}) }}">Delete</a>
                        </div>
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('app_crud_product_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('app_crud_product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_crud_product_new') }}">Create new</a>
{% endblock %}
